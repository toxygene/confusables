{
    "name": "toxygene/confusables",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Hendrickson",
            "email": "justin.hendrickson@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "nikic/php-parser": "^3.1",
        "symfony/polyfill-mbstring": "^1.7"
    },
    "autoload": {
        "files": [
            "src/confusables.php",
            "src/functions.php"
        ]
    },
    "bin": ["bin/build"],
    "scripts": {
        "post-create-project-cmd": [
            "@build"
        ],
        "build": [
            "bin/build-confusables"
        ],
        "test": [
            "phpunit"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "friendsofphp/php-cs-fixer": "^2.10"
    }
}
